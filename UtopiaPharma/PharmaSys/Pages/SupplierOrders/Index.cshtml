@page
@model PharmaSys.Pages.SupplierOrders.IndexModel
@{
    ViewData["Title"] = "Commandes Fournisseurs";
}

<div class="d-flex align-items-start justify-content-between mb-3">
    <div>
        <h2 class="fw-bold mb-1">Commandes Fournisseurs</h2>
        <div class="text-muted">Historique des achats et réapprovisionnements</div>
    </div>
    <a class="btn btn-primary btn-pill" href="/SupplierOrders/Create">
        <i class="bi bi-plus-lg me-2"></i>Nouvelle Commande
    </a>
</div>

<div class="card-soft p-3">
    <div class="d-flex gap-2 mb-3">
        <form method="get" class="d-flex align-items-center gap-2" style="flex:1;">
            <div class="searchbox d-flex align-items-center gap-2 w-100">
                <i class="bi bi-search text-muted"></i>
                <input name="Q" value="@Model.Q" placeholder="N° Commande, Nom Fournisseur..." />
            </div>
            <select name="Status" class="form-select" style="width:auto;" onchange="this.form.submit()">
                <option value="">Tous les statuts</option>
                <option value="Pending" selected="@(Model.Status == "Pending")">En attente</option>
                <option value="Received" selected="@(Model.Status == "Received")">Reçu</option>
            </select>
        </form>
    </div>

    <div class="table-responsive">
        <table class="table align-middle table-hover">
            <thead class="bg-light">
                <tr>
                    <th>Référence</th>
                    <th>Date</th>
                    <th>Fournisseur</th>
                    <th>Total</th>
                    <th>Statut</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Orders.Count == 0)
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted py-5">
                            Aucune commande trouvée.
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var o in Model.Orders)
                    {
                        <tr>
                            <td class="fw-bold">@o.OrderNumber</td>
                            <td class="text-muted">@o.OrderDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                <a href="/Suppliers/Edit?id=@o.SupplierId" class="text-decoration-none fw-semibold">
                                    @o.Supplier?.Name
                                </a>
                            </td>
                            <td class="fw-bold">@o.TotalAmount.ToString("C")</td>
                            <td>
                                @if (o.Status == "Received")
                                {
                                    <span class="badge bg-success-subtle text-success border border-success">Reçu (Stock MAJ)</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning-subtle text-warning border border-warning">En attente</span>
                                }
                            </td>
                            <td class="text-end">
                                <button class="btn btn-sm btn-light btn-pill" disabled><i class="bi bi-eye"></i></button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>