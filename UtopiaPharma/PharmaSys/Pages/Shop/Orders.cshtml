@page
@model PharmaSys.Pages.Shop.OrdersModel
@{
    ViewData["Title"] = "Mes commandes";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="m-0">Mes commandes</h2>
        <a class="btn btn-outline-primary" asp-page="/Shop/Index">Boutique</a>
    </div>

    @if (!Model.Orders.Any())
    {
        <div class="alert alert-info">Aucune commande.</div>
    }
    else
    {
        @foreach (var o in Model.Orders)
        {
            <div class="card shadow-sm mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="fw-bold">@o.OrderNumber</div>
                            <div class="text-muted">@o.OrderDate.ToString("dd/MM/yyyy HH:mm")</div>
                            <div>Statut: <span class="badge bg-secondary">@o.Status</span></div>
                        </div>
                        <div class="text-end">
                            <div class="fw-bold">@o.TotalAmount.ToString("0.00") DH</div>
                            <div class="text-muted">@o.PaymentMethod</div>
                        </div>
                    </div>

                    <hr />
                    <ul class="mb-0">
                        @foreach (var it in o.Items)
                        {
                            <li>@it.Name x @it.Quantity (@it.LineTotal.ToString("0.00") DH)</li>
                        }
                    </ul>
                </div>
            </div>
        }
    }
</div>