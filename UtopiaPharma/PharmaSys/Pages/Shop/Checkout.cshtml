@page
@model PharmaSys.Pages.Shop.CheckoutModel
@{
    ViewData["Title"] = "Validation de la commande";
}

<div class="row">
    <div class="col-md-7">
        <div class="card-soft p-4">
            <h4 class="fw-bold mb-4">Vos Coordonnées</h4>

            <form method="post">
                <div class="mb-3">
                    <label class="form-label fw-bold">Nom Complet</label>
                    <input asp-for="Input.Name" class="form-control"  />
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Email</label>
                        <input asp-for="Input.Email" class="form-control"  />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Téléphone</label>
                        <input asp-for="Input.Phone" class="form-control"  />
                        <span asp-validation-for="Input.Phone" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-bold">Adresse de livraison</label>
                    <textarea asp-for="Input.Address" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Input.Address" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success btn-pill w-100 py-3 fs-5">
                    <i class="bi bi-send-check me-2"></i> Envoyer ma demande
                </button>
                <div class="text-center text-muted small mt-2">
                    <i class="bi bi-info-circle"></i> Votre demande sera transmise au pharmacien pour validation. <br />
                    Aucun paiement en ligne n'est requis.
                </div>
            </form>
        </div>
    </div>

    <div class="col-md-5">
        <div class="card-soft p-4 bg-light">
            <h5 class="fw-bold mb-3">Résumé</h5>

            @foreach (var item in Model.CartItems)
            {
                <div class="d-flex justify-content-between mb-2">
                    <span>@item.Quantity x @item.Name</span>

                    <span class="fw-bold">@((item.Price * item.Quantity).ToString("C"))</span>
                </div>
            }

            <hr />
            <div class="d-flex justify-content-between fs-4 fw-bold">
                <span>Total</span>
                <span class="text-primary">@Model.Total.ToString("C")</span>
            </div>
        </div>
    </div>
</div>