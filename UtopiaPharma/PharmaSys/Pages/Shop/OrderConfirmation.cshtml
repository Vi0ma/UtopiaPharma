@page
@model PharmaSys.Pages.Shop.OrderConfirmationModel
@{
    ViewData["Title"] = "Demande reçue";
}

<div class="container py-5 text-center">
    <div class="card shadow-sm mx-auto border-0" style="max-width: 600px;">
        <div class="card-body p-5">
            <div class="mb-4 text-success">
                <i class="bi bi-check-circle-fill" style="font-size: 4rem;"></i>
            </div>

            <h2 class="fw-bold mb-3">Demande envoyée avec succès !</h2>

            <p class="lead text-muted mb-4">
                Merci <strong>@Model.ClientName</strong>. Nous avons bien reçu votre liste de médicaments.
            </p>

            <div class="alert alert-light border text-start p-4 rounded-3">
                <h5 class="alert-heading text-primary fw-bold"><i class="bi bi-telephone-inbound"></i> Prochaine étape</h5>
                <p class="mb-0 mt-2">
                    Notre pharmacien va vérifier le stock et vous contactera au :
                </p>
                <div class="fs-4 fw-bold text-dark mt-2 text-center">@Model.ClientPhone</div>
                <p class="mb-0 mt-2 text-muted small text-center">
                    (Pour confirmer la disponibilité et le retrait)
                </p>
            </div>

            <div class="mt-4">
                <a href="/Shop/Index" class="btn btn-outline-primary btn-pill px-4">
                    Retour à la boutique
                </a>
            </div>
        </div>
    </div>
</div>