@page
@model PharmaSys.Pages.Shop.CartModel
@{
    ViewData["Title"] = "Panier";
}

<link rel="stylesheet" href="~/css/client.css" />

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="m-0">Panier</h2>
        <a class="btn btn-outline-secondary" asp-page="/Shop/Index">Continuer</a>
    </div>

    @if (!Model.Items.Any())
    {
        <div class="alert alert-info">Votre panier est vide.</div>
    }
    else
    {
        <table class="table align-middle">
            <thead>
                <tr>
                    <th>Produit</th>
                    <th style="width:140px;">Prix</th>
                    <th style="width:160px;">Quantité</th>
                    <th style="width:140px;">Total</th>
                    <th style="width:80px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var it in Model.Items)
                {
                    <tr>
                        <td>@it.Name</td>
                        <td>@it.Price.ToString("0.00") DH</td>
                        <td>
                            <form method="post" asp-page-handler="Update" class="d-flex gap-2">
                                <input type="hidden" name="id" value="@it.MedicationId" />
                                <input type="number" name="qty" value="@it.Quantity" min="0" class="form-control form-control-sm" />
                                <button class="btn btn-sm btn-primary">OK</button>
                            </form>
                        </td>
                        <td>@( (it.Price*it.Quantity).ToString("0.00") ) DH</td>
                        <td>
                            <form method="post" asp-page-handler="Remove">
                                <input type="hidden" name="id" value="@it.MedicationId" />
                                <button class="btn btn-sm btn-danger">X</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="d-flex justify-content-between align-items-center">
            <div class="fw-bold fs-5">Total: @Model.Total.ToString("0.00") DH</div>
            <a class="btn btn-success" asp-page="/Shop/Checkout">Passer au paiement</a>
        </div>
    }
</div>