@page
@model PharmaSys.Pages.Medications.DeleteModel

@{
    ViewData["Title"] = "Supprimer un médicament";
}

<div class="container mt-4">
    @if (!ModelState.IsValid)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <h4 class="alert-heading"><i class="bi bi-exclamation-triangle"></i> Action impossible</h4>
            <div asp-validation-summary="ModelOnly" class="text-dark"></div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="alert alert-danger shadow-sm">
        <h3 class="mb-3"><i class="bi bi-exclamation-triangle-fill"></i> Êtes-vous sûr ?</h3>
        <p class="mb-0">Vous êtes sur le point de supprimer définitivement ce médicament. Cette action est irréversible.</p>
    </div>

    <div class="card shadow-sm border-0 mt-4">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0 text-secondary">Détails du médicament</h5>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 text-muted">Nom du médicament</dt>
                <dd class="col-sm-9 fw-bold fs-5">@Html.DisplayFor(model => model.Medication.Name)</dd>

                <dt class="col-sm-3 text-muted">Code Référence</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Medication.Code)</dd>

                <dt class="col-sm-3 text-muted">Dosage</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Medication.Dosage)</dd>

                <dt class="col-sm-3 text-muted">Catégorie</dt>
                <dd class="col-sm-9">
                    @if (Model.Medication.Category != null)
                    {
                        <span class="badge bg-info text-dark">@Model.Medication.Category.Name</span>
                    }
                    else
                    {
                        <span class="text-muted">-</span>
                    }
                </dd>

                <dt class="col-sm-3 text-muted">Prix de vente</dt>
                <dd class="col-sm-9">@Model.Medication.SalePrice.ToString("C")</dd>
            </dl>
        </div>
        <div class="card-footer bg-light py-3 d-flex gap-2 justify-content-end">
            <form method="post">
                <input type="hidden" asp-for="Medication.Id" />

                <a asp-page="./Index" class="btn btn-outline-secondary">
                    Annuler
                </a>

                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Confirmer la suppression
                </button>
            </form>
        </div>
    </div>
</div>