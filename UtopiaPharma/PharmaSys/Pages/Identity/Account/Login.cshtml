@page
@model LoginModel
@{
    Layout = null; // ✅ pas de sidebar / pas de _Layout
    ViewData["Title"] = "Connexion";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Utopia Pharmacie</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
        body {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: radial-gradient(circle at 30% 30%, rgba(255,255,255,.18), transparent 40%), radial-gradient(circle at 75% 60%, rgba(255,255,255,.14), transparent 45%), linear-gradient(135deg, #07c3a7 0%, #00a6a3 55%, #039a86 100%);
            padding: 20px;
        }

        .login-card {
            width: 100%;
            max-width: 520px;
            border-radius: 22px;
            background: rgba(255,255,255,.96);
            box-shadow: 0 18px 55px rgba(0,0,0,.15);
            border: 1px solid rgba(255,255,255,.55);
            overflow: hidden;
        }

        .login-head {
            padding: 28px 34px 10px 34px;
            text-align: center;
        }

            .login-head h1 {
                font-size: 34px;
                margin: 0;
                font-weight: 800;
                color: #2b2b2b;
            }

            .login-head p {
                margin-top: 6px;
                color: #6b7280;
            }

        .login-body {
            padding: 18px 34px 34px 34px;
        }

        .input-wrap {
            position: relative;
        }

            .input-wrap .icon {
                position: absolute;
                right: 14px;
                top: 50%;
                transform: translateY(-50%);
                width: 34px;
                height: 34px;
                border-radius: 10px;
                background: #f0fdfb;
                color: #0ea5a4;
                display: flex;
                align-items: center;
                justify-content: center;
                border: 1px solid #d1fae5;
            }

        .form-control {
            border-radius: 12px;
            padding: .8rem 3.2rem .8rem 1rem;
            border: 1px solid #e5e7eb;
        }

            .form-control:focus {
                border-color: #0ea5a4;
                box-shadow: 0 0 0 .20rem rgba(14,165,164,.18);
            }

        .btn-green {
            background: #08b39a;
            border: none;
            border-radius: 14px;
            padding: .9rem 1rem;
            font-weight: 700;
        }

            .btn-green:hover {
                background: #069c86;
            }

        .brand-mini {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            margin-bottom: 16px;
        }

        .brand-dot {
            width: 46px;
            height: 46px;
            border-radius: 14px;
            background: #0ea5a4;
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
            box-shadow: 0 10px 22px rgba(14,165,164,.35);
        }

        .brand-title {
            text-align: left;
        }

            .brand-title b {
                display: block;
            }

            .brand-title small {
                color: #6b7280;
            }
    </style>
</head>
<body>

    <div class="login-card">
        <div class="login-head">
            <div class="brand-mini">
                <div class="brand-dot"><i class="bi bi-capsule"></i></div>
                <div class="brand-title">
                    <b>Utopia Pharmacie</b>
                    
                </div>
            </div>

            <h1>Connexion</h1>
            <p>Accédez à votre compte</p>
        </div>

        <div class="login-body">
            <form id="account" method="post">

                <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <div class="input-wrap">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" />
                        <div class="icon"><i class="bi bi-envelope"></i></div>
                    </div>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Mot de passe</label>
                    <div class="input-wrap">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" />
                        <div class="icon"><i class="bi bi-lock"></i></div>
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-3">

                    
                </div>

                <button id="login-submit" type="submit" class="btn btn-green w-100">
                    Se connecter
                </button>
            </form>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
